@model Clientes.Models.Agendamento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAgendamentos.cshtml";
}

<h1>Detalhes Agendamento </h1>





    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="project-info-box mt-0">
                    <h5>@Html.DisplayFor(model => model.Cliente.Nome)</h5>
                   
                </div><!-- / project-info-box -->

                <div class="project-info-box">
                    <p><b>@Html.DisplayNameFor(model => model.Data):</b> @Html.DisplayFor(model => model.Data)</p>
                    <p><b>@Html.DisplayNameFor(model => model.Tipo):</b> @Html.DisplayFor(model => model.Tipo)</p>
                    <p><b>@Html.DisplayNameFor(model => model.Responsavel):</b> @Html.DisplayFor(model => model.Responsavel)</p>
                    <p><b>@Html.DisplayNameFor(model => model.Estado):</b> @Html.DisplayFor(model => model.Estado.EstadoNome)</p>
                    <p><b>@Html.DisplayNameFor(model => model.Cliente):</b> @Html.DisplayFor(model => model.Cliente.Nome)</p>
                <fieldset disabled="">
                    <div class="form-group">
                        <label asp-for="Detalhes" for="exampleTextarea" class="form-label mt-4">Detalhes</label>
                        <textarea asp-for="Detalhes" class="form-control" id="exampleTextarea" rows="3" style="height: 263px;"></textarea>
                    </div>
                </fieldset>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm" style="margin:3px; background-color:darkorange; color:aliceblue">Editar</a> 
                <a asp-action="Index" class="btn btn-sm" style="margin:3px; background-color:darkorange; color:aliceblue">Voltar</a>
                </div><!-- / project-info-box -->


            </div><!-- / column -->
        </div>
    </div>




