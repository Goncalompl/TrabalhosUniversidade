@model IEnumerable<Clientes.Models.Cliente>
@{
    ViewData["Title"] = "Contactos";
    Layout = "~/Views/Shared/_LayoutClientes.cshtml";
}



<h1 class="pb-2 border-bottom">
    <span class="badge rounded-pill" style="background-color:royalblue; color:aliceblue">Lista de Contactos </span>

</h1>


<form method="post">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <div class="container" >
        <br />
        <div class="row g-3 justify-content-center" >
            <div class="col-12 col-md-6 col-lg-4 h-100" style="background: -webkit-radial-gradient(circle, white, #B7C2E5);">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="col">
                            <input class="form-control form-control-lg form-control-borderless" type="text" id="TextoAPesquisar" name="TextoAPesquisar" placeholder="Nome / Email / Website">
                        </div>
                        <!--end of col-->
                        <div class="col-auto">
                            <button class="btn btn-lg" type="submit" style="background-color:royalblue; color:aliceblue">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="col">
                            <input class="form-control form-control-lg form-control-borderless" type="text" id="nr" name="nr" placeholder="Nr Telemovel / Telefone">
                        </div>
                        <!--end of col-->
                        <div class="col-auto">
                            <button class="btn btn-lg" type="submit" style="background-color:royalblue; color:aliceblue">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
            <!--end of col-->
        </div>
    </div>
</form>


<a asp-action="ListaContactos" type="button" class="btn btn-sm" style="background-color:royalblue; color:white">Todos</a>
                                                                         
<a asp-action="Contactos" type="button" class="btn btn-sm" style="background-color:royalblue; color:white">  ⇆ </a>

    <button id="btnGroupDrop1" type="button" class="btn  btn-sm dropdown-toggle show" style="background-color:royalblue; color:aliceblue" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
    <div class="dropdown-menu " aria-labelledby="btnGroupDrop1" data-popper-placement="bottom-start">
        <a asp-controller="Clientes" asp-action="ListaContactos" asp-route-Lista="1"  > ALista </a>
        <div class=""></div>
    <a asp-controller="Clientes" asp-action="ListaContactos" asp-route-Lista="2" style="  background-color:royalblue; color:aliceblue"> AListaDigital </a>
        <div class=""></div>
    <a asp-controller="Clientes" asp-action="ListaContactos" asp-route-Lista="3" style="  background-color:royalblue; color:aliceblue"> Ambos </a>
    </div>



<div class="row row-cols-1 row-cols-md-3 mb-3 g-3 text-center" >
  
    
 @foreach (var item in Model)
        {
        <div class="col-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="dropdown float-end">
                                    <a class="text-muted dropdown-toggle font-size-16" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true"><i class="bx bx-dots-horizontal-rounded"></i></a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                    <a class="dropdown-item" asp-area=""  asp-action="EditarContactos" asp-route-id="@item.Id"> Editar</a>
                            <a class="dropdown-item" asp-area="" asp-action="Delete" asp-route-id="@item.Id"> Apagar</a>
                          

                        </div>
                                </div>
                                <div class="d-flex align-items-center">

                                    <div class="flex-1 ms-3">
                                        <h5 class="font-size-16 mb-1"><a href="#" class="text-dark"> @Html.DisplayFor(modelItem => item.Nome)</a></h5>
                                        
                                    </div>
                                </div>
                                <div class="mt-3 pt-1">
                        <p class="text-muted mb-0"><i class="mdi mdi-phone font-size-15 align-middle pe-2 text-primary"></i><img src="~/img/phone-call.png" width="45" height="25" /> @Html.DisplayFor(modelItem => item.Telefone)</p>
                        <p class="text-muted mb-0"><i class="mdi mdi-phone font-size-15 align-middle pe-2 text-primary"></i><img src="~/img/phone-call.png" width="45" height="25" /> @Html.DisplayFor(modelItem => item.Telemovel)</p>

                        <p class="text-muted mb-0 mt-2"><i class="mdi mdi-email font-size-15 align-middle pe-2 text-primary"></i><img src="~/img/mail.png" width="45" height="25" /> @Html.DisplayFor(modelItem => item.Email)</p>
                        <p class="text-muted mb-0 mt-2"><i class="mdi mdi-google-maps font-size-15 align-middle pe-2 text-primary"></i><img src="~/img/world-wide-web.png" width="45" height="25" /> @Html.DisplayFor(modelItem => item.Website)</p>
                                </div>
                                <div class="d-flex gap-2 pt-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm w-50" style="background-color:royalblue; color:aliceblue"> Detalhes </a>
                                   
                                    <a asp-action="ContractoDetalhes" asp-route-id="@item.Id" class="btn btn-sm w-50" style="background-color:royalblue; color:aliceblue"> Contrato </a>
                                </div>
                            </div>
                        </div>     
        </div>
   
   }




<style>
        .button-wrap {
            padding: 15px 46px;
            color: #fff;
            background-color: #4169e1;
            /*border: 1px solid transparent;*/
            box-shadow: 0 3px 3px 0 rgba(1,1,1,.55);
            -webkit-transition: .5s cubic-bezier(.22,.61,.36,1);
            -moz-transition: .5s cubic-bezier(.22,.61,.36,1);
            transition: .5s cubic-bezier(.22,.61,.36,1);
            position: relative;
            display: inline-block;
            margin: 10px auto;
            text-transform: uppercase;
            font-size: 15px;
        }

        .button-wrap:hover {
                -webkit-filter: drop-shadow(3px 3px 20px rgba(65, 105, 225, .7));
                filter: drop-shadow(3px 3px 20px rgba(65, 105, 225, .7));
                color: #fff;
                text-decoration: none;
         }

            .button-wrap:before {
                content: "";
                position: absolute;
                top: 0px;
                left: -15px;
                width: 0;
                height: 0;
                border-top: 55px solid #4169e1;
                border-left: 15px solid transparent;
                -webkit-transition: border-color .2s ease-in-out;
                -moz-transition: border-color .2s ease-in-out;
                transition: border-color .2s ease-in-out;
            }

            .button-wrap:after {
                content: "";
                position: absolute;
                top: 0px;
                right: -15px;
                width: 0;
                height: 0;
                border-top: 55px solid #4169e1;
                border-right: 15px solid transparent;
                -webkit-transition: border-color .2s ease-in-out;
                -moz-transition: border-color .2s ease-in-out;
                transition: border-color .2s ease-in-out;
            }



        body {
            /* Safari 4-5, Chrome 1-9 */
            background: -webkit-gradient(radial, center center, 0, center center, 460, from(#ffff66), to(#2F2727));
            /* Safari 5.1+, Chrome 10+ */
            background: -webkit-radial-gradient(circle, white, #6581DE);
            /* Firefox 3.6+ */
            background: -moz-radial-gradient(circle, #ffff66, white);
            /* IE 10 */
            background: -ms-radial-gradient(circle, #ffff66, white);
            
            background-color: #eee;
            height: 600px;
        }

   

    .card {
        margin-bottom: 24px;
        box-shadow: 0 2px 3px #e4e8f0;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid #eff0f2;
        border-radius: 1rem;
    }

    .avatar-md {
        height: 4rem;
        width: 4rem;
    }

    .rounded-circle {
        border-radius: 50% !important;
    }

    .img-thumbnail {
        padding: 0.25rem;
        background-color: #f1f3f7;
        border: 1px solid #eff0f2;
        border-radius: 0.75rem;
    }

    .avatar-title {
        align-items: center;
        background-color: #3b76e1;
        color: #fff;
        display: flex;
        font-weight: 500;
        height: 100%;
        justify-content: center;
        width: 100%;
    }

    .bg-soft-primary {
        background-color: rgba(59,118,225,.25) !important;
    }

    a {
        text-decoration: none !important;
    }

    .badge-soft-danger {
        color: #f56e6e !important;
        background-color: rgba(245,110,110,.1);
    }

    .badge-soft-success {
        color: #63ad6f !important;
        background-color: rgba(99,173,111,.1);
    }

    .mb-0 {
        margin-bottom: 0 !important;
    }

    .badge {
        display: inline-block;
        padding: 0.25em 0.6em;
        font-size: 75%;
        font-weight: 500;
        line-height: 1;
        color: #fff;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.75rem;
    }
</style>