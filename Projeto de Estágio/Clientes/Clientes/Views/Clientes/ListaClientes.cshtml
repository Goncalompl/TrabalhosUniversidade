@model IEnumerable<Clientes.Models.Cliente>

@{
    ViewData["Title"] = "Lista Clientes";
    Layout = "~/Views/Shared/_LayoutClientes.cshtml";
}



<h1 class="pb-2 border-bottom">
    <span class="badge rounded-pill" style="background-color:royalblue; color:aliceblue">Clientes</span>
   
    <a asp-action="Create" class="btn btn-sm" style="color:royalblue; background-color:white"> Novo Cliente </a>
   
</h1>



    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <div class="container">
        <br />
        <div class="row justify-content-center">
            <div class="col-6 col-md-5 col-lg-4">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <div class="col">
                            <input class="form-control form-control-lg form-control-borderless" type="text" id="TextoAPesquisar" name="TextoAPesquisar" placeholder="Nome / Localidade">
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-lg" type="submit" style="background-color:royalblue; color:aliceblue">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


<a asp-action="ListaClientes" type="button" class="btn btn-sm" style="background-color:royalblue; color:white">Todos</a>
                                                                          
<a asp-action="Index" type="button" class="btn btn-sm" style="background-color:royalblue; color:white">  ⇆ </a>
<button id="btnGroupDrop1" type="button" class="btn  btn-sm dropdown-toggle show" style="background-color:royalblue; color:aliceblue" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
<div class="dropdown-menu " aria-labelledby="btnGroupDrop1"  data-popper-placement="bottom-start">
    <a asp-controller="Clientes" asp-action="ListaClientes" asp-route-Lista="1" class="btn btn-sm px-4 gap-3" style="margin:3px;  background-color:royalblue; color:aliceblue"> ALista </a>
    <a asp-controller="Clientes" asp-action="ListaClientes" asp-route-Lista="2" class="btn btn-sm px-4 gap-3" style="margin:3px;  background-color:royalblue; color:aliceblue"> AListaDigital </a>
    <a asp-controller="Clientes" asp-action="ListaClientes" asp-route-Lista="3" class="btn btn-sm px-4 gap-3" style="margin:3px;  background-color:royalblue; color:aliceblue"> Ambos </a>
</div>


<div  style="margin:20px">   

     @foreach (var item in Model)
    {
    <div class="col-20 col-md-6 col-lg-11" style="align-content:center; background-color:whitesmoke">
        <div class="card border-0 bg-light rounded shadow m-0 h-100">
            <div class="card-body p-4">
                    <span class="badge rounded-pill float-md-end mb-3 mb-sm-0" style="background-color:royalblue; color:aliceblue">@Html.DisplayFor(model => item.Tags)</span>
                <h5>@Html.DisplayFor(model => item.Nome)</h5>
                <div class="mt-3">
                        <span class="text-muted d-block"><i  aria-hidden="true"></i> <img src="~/img/id-card.png" width="40" height="20" /> @Html.DisplayFor(model => item.Representante)</span>
                        <span class="text-muted d-block"><i  aria-hidden="true"></i> <img src="~/img/local.png" width="40" height="20" /> @Html.DisplayFor(model => item.Localidade)</span>
                        <span class="text-muted d-block"><i  aria-hidden="true"></i>  <img src="~/img/location.png" width="40" height="20" /> @Html.DisplayFor(model => item.Morada)</span>
                    
                </div>

                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color:royalblue; color:aliceblue"> Detalhes </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color:aliceblue; color:royalblue"> Editar </a>
                        <a asp-controller="PdfFiles" asp-action="Details" asp-route-id="@item.Id" asp-route-nomecomercial="@item.Nome" class="btn btn-sm" style="background-color:royalblue; color:aliceblue"> Contrato </a>
                       
                    </div>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"> X </a>
            </div>
        </div>
    </div> 
    }
</div>

<style>
    form {
        padding-top: 15px;
        padding-bottom: 25px;
    }

    h1 {
        padding-top: 10px;
        padding-bottom: 5px;
        font-family: 'Playfair Display';
    }

    tr {
        border: 1px solid;
        width: 50%;
        padding-top: 5px;
        padding-bottom: 5px;
    }


    .button-wrap {
        padding: 15px 46px;
        color: #fff;
        background-color: #4169e1;
        /*border: 1px solid transparent;*/
        box-shadow: 0 3px 3px 0 rgba(1,1,1,.55);
        -webkit-transition: .5s cubic-bezier(.22,.61,.36,1);
        -moz-transition: .5s cubic-bezier(.22,.61,.36,1);
        transition: .5s cubic-bezier(.22,.61,.36,1);
        position: relative;
        display: inline-block;
        margin: 10px auto;
        text-transform: uppercase;
        font-size: 15px;
    }

        .button-wrap:hover {
            -webkit-filter: drop-shadow(3px 3px 20px rgba(65, 105, 225, .7));
            filter: drop-shadow(3px 3px 20px rgba(65, 105, 225, .7));
            color: #fff;
            text-decoration: none;
        }

        .button-wrap:before {
            content: "";
            position: absolute;
            top: 0px;
            left: -15px;
            width: 0;
            height: 0;
            border-top: 55px solid #4169e1;
            border-left: 15px solid transparent;
            -webkit-transition: border-color .2s ease-in-out;
            -moz-transition: border-color .2s ease-in-out;
            transition: border-color .2s ease-in-out;
        }

        .button-wrap:after {
            content: "";
            position: absolute;
            top: 0px;
            right: -15px;
            width: 0;
            height: 0;
            border-top: 55px solid #4169e1;
            border-right: 15px solid transparent;
            -webkit-transition: border-color .2s ease-in-out;
            -moz-transition: border-color .2s ease-in-out;
            transition: border-color .2s ease-in-out;
        }

    body {
        /* Safari 4-5, Chrome 1-9 */
        background: -webkit-gradient(radial, center center, 0, center center, 460, from(#ffff66), to(#2F2727));
        /* Safari 5.1+, Chrome 10+ */
        background: -webkit-radial-gradient(circle, #6581DE, white);
        /* Firefox 3.6+ */
        background: -moz-radial-gradient(circle, #ffff66, white);
        /* IE 10 */
        background: -ms-radial-gradient(circle, #ffff66, white);
        height: 600px;
    }

    .centered-form {
        margin-top: 60px;
    }

        .centered-form .panel {
            background: rgba(255, 255, 255, 0.8);
            box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
        }
    
</style>


