@model Clientes.Models.PdfFiles

@{
    ViewData["Title"] = "Editar Nome Pdf";
    Layout = "~/Views/Shared/_LayoutClientes.cshtml";
}

<h1>Editar - @Html.DisplayFor(model => model.Name)</h1>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Path" class="control-label"></label>
                <input asp-for="Path" class="form-control" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientePdfID" class="control-label"></label>
                <select asp-for="ClientePdfID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="ClientePdfID" class="text-danger"></span>
            </div>
         
           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-sm" style="margin:3px; background-color:royalblue; color:aliceblue" />
                <a asp-action="Details" class="btn btn-sm" style="margin:3px; background-color:royalblue; color:aliceblue">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
