<div class="row align-items-stretch g-3">
 @foreach (var item in Model)
    {

        <div class="box col-12 col-md-6 col-lg-4 h-100">
    <div class="container">
            <div @*class="row align-items-stretch g-3"*@>
            <div class="col-lg-12 col-12 text-center">
                <div class="box-column">
                       
                    
                            @if (@item.Quente.EstadoLeadNome == "Frio")
                            {
                                <h5 class="box-header" style="background-color:deepskyblue; color:aliceblue"> @Html.DisplayFor(model => item.Nome) - @Html.DisplayFor(model => item.Quente.EstadoLeadNome)  <a asp-action="EditarEstadoLead" asp-route-id="@item.Id" class="btn btn-sm btn-success"> ✎ </a></h5>
                            }
                            else if (@item.Quente.EstadoLeadNome == "Quente")
                            {
                                <h5 class="box-header"style="background-color:#FF4433; color:aliceblue"> @Html.DisplayFor(model => item.Nome) - @Html.DisplayFor(model => item.Quente.EstadoLeadNome)  <a asp-action="EditarEstadoLead" asp-route-id="@item.Id" class="btn btn-sm btn-success"> ✎ </a></h5>

                            }
      
                            <div class="project-info-box" >
                                <p><b>@Html.DisplayNameFor(model => model.AFazer):</b> @Html.DisplayFor(model => item.AFazer)</p>
                                <p><b>@Html.DisplayNameFor(model => model.Responsavel):</b> @Html.DisplayFor(model => item.Responsavel)</p>
                                <p><b>@Html.DisplayNameFor(model => model.Email):</b> @Html.DisplayFor(model => item.Email)</p>
                                <p><b>@Html.DisplayNameFor(model => model.SetorAtividade):</b> @Html.DisplayFor(model => item.SetorAtividade)</p>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color:mediumseagreen; color:aliceblue"> Detalhes </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color:mediumseagreen; color:aliceblue"> Editar </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"> X </a>
                            </div><!-- / project-info-box -->
                </div>
            </div>
        </div>
    </div>
</div>
}
