@model TrabalhoFinalRentCar.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-3 mt-3">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PrimeiroNome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UltimoNome)
                </dd>
                <dt class="col-sm-2">
                    Username
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    Phone Number
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-dark" /> |
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Owners">Back to List</a>
                }
                else
                {
                    <a asp-action="Employees">Back to List</a>
                }
                
            </form>
        </div>
    </div>


<style>
      h1{
        padding-top: 1em;
        padding-bottom: 10px;
        font-family: 'Playfair Display';
    }

    h3{
        padding-bottom: 10px;
        font-family: 'Playfair Display';
    }
</style>